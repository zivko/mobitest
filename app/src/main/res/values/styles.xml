<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopCategory" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#222</item>
    </style>

    <style name="ImageListing">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="TextListing">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_below">@+id/listingPhoto</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#1976D2</item>
    </style>


</resources>
